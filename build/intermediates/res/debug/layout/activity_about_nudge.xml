<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ksp.nudge.AboutNudgeActivity">

    <TextView
        android:id="@+id/aboutArtistTitle"
        android:text="@string/subtitle_donate_to_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/aboutArtistText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/artist_donation_text"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_below="@+id/aboutArtistTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/portfolioButton"
        android:layout_height="@dimen/raised_button_height"
        android:layout_width="wrap_content"
        android:onClick="launchBrowser"
        android:layout_below="@+id/aboutArtistText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardBackgroundColor="@color/raisedButtonColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/portfolioButtonText"
            android:textColor="@color/raisedButtonTextColor"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_button_material"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/aboutDeveloperTitle"
        android:text="@string/subtitle_donate_to_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_below="@+id/portfolioButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/aboutDeveloperText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developer_donation_text"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_below="@+id/aboutDeveloperTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/websiteButton"
        android:layout_height="@dimen/raised_button_height"
        android:layout_width="wrap_content"
        android:onClick="launchBrowser"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aboutDeveloperText"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardBackgroundColor="@color/raisedButtonColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/developerButtonText"
            android:textColor="@color/raisedButtonTextColor"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_button_material"/>

    </android.support.v7.widget.CardView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/aboutUsAdView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        ads:adSize="BANNER"
        ads:adUnitId="@string/splash_screen_ad_unit_id"
        android:layout_alignParentBottom="true">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
