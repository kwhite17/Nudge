<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksp.nudge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nudge_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ksp.nudge.MessageFormActivity"
            android:label="@string/action_new_message" >
        </activity>
        <activity
            android:name="com.ksp.nudge.ActiveRemindersActivity"
            android:label="@string/title_activity_scheduled_messages" >
        </activity>

        <activity-alias
            android:name="com.ksp.nudge.MainActivityAlias"
            android:icon="@drawable/nudge_icon"
            android:label="@string/app_name"
            android:targetActivity="com.ksp.nudge.ActiveRemindersActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <service
            android:name="com.ksp.nudge.SendMessageService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name="com.ksp.nudge.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>