<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:orientation="horizontal">

                <include
                    android:id="@+id/autocomplete_item_name_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@android:layout/simple_dropdown_item_1line"/>

                <include
                    android:id="@+id/autocomplete_item_type_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@android:layout/simple_dropdown_item_1line"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/autocompleteContactImageId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_report_image"
                    />

                <include
                    android:id="@+id/autocomplete_item_number_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    layout="@android:layout/simple_dropdown_item_1line"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>