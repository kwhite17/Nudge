<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/cardview_light_background"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nudgeRecipientText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/text_padding"
                    android:text="Name"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textSize="@dimen/abc_text_size_headline_material"/>
                <TextView
                    android:id="@+id/nudgeSendDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:text="Time"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textSize="@dimen/abc_text_size_body_1_material"/>
                <TextView
                    android:id="@+id/nudgeMessageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:text="Message"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textSize="@dimen/abc_text_size_body_1_material"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/editNudgeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="88dp"
                    card_view:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/abc_button_padding_horizontal_material"
                        android:textAllCaps="true"
                        android:textColor="@color/flatButtonTextColor"
                        android:text="@string/edit_nudge_button_text"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/deleteNudgeButton"
                    android:layout_width="wrap_content"
                    android:minWidth="88dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_button_material"
                    card_view:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/abc_button_padding_horizontal_material"
                        android:textAllCaps="true"
                        android:textSize="@dimen/abc_text_size_button_material"
                        android:textColor="@color/flatButtonTextColor"
                        android:text="@string/delete_nudge_button_text"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>